<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TonyRecordButton">
        <attr name="buttonColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="strokeAlpha" format="integer"/>
        <attr name="recordColor" format="color"/>
        <attr name="maxDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TonyRecordLock">
        <attr name="record_lock_behavior" format="string"/>
        <attr name="drawableNotReady" format="reference"/>
        <attr name="drawableReady" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TonyRippleConstraintLayout">
        <attr name="willDraw" format="boolean"/>
        <attr name="rippleColor" format="color"/>
        <attr name="rippleRadius" format="dimension"/>
    </declare-styleable>
</resources>