<?xml version="1.0" encoding="utf-8"?>
<com.example.tonywidgets.TonyRecordConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beach"
    app:willDraw="true"
    tools:context=".HandsFreeActivity">

    <com.example.tonywidgets.TonyRecordButton
        android:id="@+id/btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:maxDuration="5000"
        app:buttonColor="#fff"
        app:strokeColor="#ffffff"
        app:strokeWidth="5dp"
        app:strokeAlpha="128"
        app:recordColor="#ff0000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">
    </com.example.tonywidgets.TonyRecordButton>

    <com.example.tonywidgets.TonyRecordLock
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:record_lock_behavior="@string/record_lock_behavior"
        app:drawableNotReady="@drawable/lock_off"
        app:drawableReady="@drawable/lock_on"
        app:layout_constraintTop_toTopOf="@id/btn"
        app:layout_constraintBottom_toBottomOf="@id/btn"
        app:layout_constraintRight_toLeftOf="@id/btn"
        android:layout_marginRight="10dp">
    </com.example.tonywidgets.TonyRecordLock>


</com.example.tonywidgets.TonyRecordConstraintLayout>